<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">
    <property name="prefix" value="db_book"/>
    <property name="author" value="Slava"/>

    <changeSet id="v_1.0_id_7.1_module_book-service_table_union_date_02022023.xml" author="${author}">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="${prefix}_union"/>
            </not>
        </preConditions>
        <createTable tableName="${prefix}_union" remarks="таблица связи заказ-книги(могие к многим)">
            <column name="id" type="uuid" remarks="поле id">
                <constraints primaryKey="true"/>
            </column>
            <column name="book" type="uuid" remarks="связь с книгой"/>
            <column name="order" type="uuid" remarks="связь с продажей"/>
        </createTable>
        <rollback>
            <dropTable tableName="${prefix}_union"/>
        </rollback>
    </changeSet>





</databaseChangeLog>